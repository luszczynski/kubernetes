{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"nexus",
      "labels":{
         "name":"nexus"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"nexus"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"nexus"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"nexus",
                  "image":"luszczynski/nexus",
                  "ports":[
                     {
                        "name":"nexus",
                        "containerPort":8081,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}