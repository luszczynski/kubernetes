{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"ews-counter",
      "labels":{
         "name":"ews-counter"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"ews-counter"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"ews-counter"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"ews-counter",
                  "image":"luszczynski/ews-counter",
                  "ports":[
                     {
                        "name":"mod-cluster",
                        "containerPort":6666,
                        "protocol":"TCP"
                     },
                     {
                        "name":"apache",
                        "containerPort":80,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}