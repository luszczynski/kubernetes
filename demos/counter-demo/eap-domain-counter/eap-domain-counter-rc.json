{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"eap-domain-counter",
      "labels":{
         "name":"eap-domain-counter"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"eap-domain-counter"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"eap-domain-counter"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"eap-domain-counter",
                  "image":"luszczynski/eap-domain-counter",
                  "ports":[
                     {
                        "name":"management",
                        "containerPort":9999,
                        "protocol":"TCP"
                     },
                     {
                        "name":"console",
                        "containerPort":9990,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}